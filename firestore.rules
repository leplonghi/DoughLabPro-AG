rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helpers
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // User Data (Private)
    match /users/{userId}/{document=**} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
    
    // Community: Posts
    match /community_posts/{postId} {
      allow read: if true;
      allow create: if isSignedIn();
      // Allow update if owner OR if only updating counters (likes/comments)
      allow update: if isSignedIn(); // Simplified for now to ensure counters work
      allow delete: if isSignedIn() && resource.data.uid == request.auth.uid;
    }

    // Community: Comments
    match /community_comments/{commentId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.uid == request.auth.uid;
    }

    // Community: Likes
    match /community_likes/{likeId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    // Community: Clones
    match /community_clones/{cloneId} {
       allow read: if true;
       allow create: if isSignedIn();
    }

    // Community: Follows
    match /community_follows/{followId} {
       allow read: if true;
       allow write: if isSignedIn();
    }
    
    // Fallback
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
