rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Helpers ---
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isDataOwner() {
      return request.auth.uid == resource.data.uid;
    }
    
    // Check if user belongs to a specific tenant/org
    function belongsToTenant(tenantId) {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.tenantId == tenantId;
    }

    // --- User Data (Strict Isolation) ---
    match /users/{userId}/{document=**} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
    
    // --- Organizations / Tenancy (Future-proofing) ---
    match /organizations/{orgId}/{document=**} {
       allow read, write: if belongsToTenant(orgId);
    }

    // --- Community: Posts ---
    match /community_posts/{postId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      
      // Update: 
      // 1. Owner can update everything
      // 2. Others can ONLY update via functions or we could allow specific field increment here
      // But for security, we restrict a lot.
      allow update: if isSignedIn() && (
        isDataOwner() || 
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'commentCount', 'cloneCount']))
      );
      
      allow delete: if isSignedIn() && isDataOwner();
    }

    // --- Community: Comments ---
    match /community_comments/{commentId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow update, delete: if isSignedIn() && isDataOwner();
    }

    // --- Community: Likes & Stats ---
    match /community_likes/{likeId} {
      allow read: if true;
      allow write: if isSignedIn() && (request.resource.data.uid == request.auth.uid || resource.data.uid == request.auth.uid);
    }
    
    match /community_clones/{cloneId} {
       allow read: if true;
       allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
    }

    match /community_follows/{followId} {
       allow read: if true;
       allow write: if isSignedIn() && (request.resource.data.followerId == request.auth.uid || resource.data.followerId == request.auth.uid);
    }

    // --- Rate Limiting (Backend Only) ---
    match /rate_limits/{limitId} {
       allow read, write: if false; // Only Cloud Functions can touch this
    }
    
    // Fallback
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
